@page
@model TargetProjectManage.Pages.Proposals.IndexModel
@{
    ViewData["Title"] = "廠商提案管理";
}

@if (Model.CurrentProject != null)
{
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1><i class="bi bi-file-earmark-text me-2"></i>廠商提案管理</h1>
            <div class="text-muted">
                <i class="bi bi-folder me-1"></i>@Model.CurrentProject.ProjectName 
                <span class="badge bg-primary ms-2">@Model.CurrentProject.ProjectCode</span>
            </div>
        </div>
        <div>
            <div class="btn-group me-2" role="group">
                <button type="button" class="btn btn-success dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
                    <i class="bi bi-download me-1"></i>匯出報表
                </button>
                <ul class="dropdown-menu">
                    <li><a class="dropdown-item" href="?projectId=@Model.CurrentProject.Id&handler=ExportExcel">
                        <i class="bi bi-filetype-xlsx me-2"></i>Excel 格式
                    </a></li>
                </ul>
            </div>
            <a asp-page="Create" asp-route-projectId="@Model.CurrentProject.Id" class="btn btn-primary">
                <i class="bi bi-plus-circle me-1"></i>新增提案
            </a>
            <a asp-page="/Projects/Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i>返回專案列表
            </a>
        </div>
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="bi bi-exclamation-triangle display-1 text-warning"></i>
        <h3 class="text-muted mt-3">請先選擇專案</h3>
        <p class="text-muted">請從專案列表中選擇一個專案來管理提案</p>
        <a asp-page="/Projects/Index" class="btn btn-primary">
            <i class="bi bi-folder me-1"></i>選擇專案
        </a>
    </div>
    return;
}

@if (Model.Proposals.Any())
{
    <div class="table-responsive">
        <table class="table table-hover">
            <thead class="table-dark">
                <tr>
                    <th>提案公司</th>
                    <th>預算</th>
                    <th>執行期間</th>
                    <th>提案時間</th>
                    <th>備註</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Proposals)
                {
                    <tr>
                        <td>
                            <strong>@item.VendorName</strong>
                        </td>
                        <td>
                            <span class="badge bg-success">NT$ @item.Budget.ToString("N0")</span>
                        </td>
                        <td>
                            <span class="badge bg-info">@item.DurationMonths 個月</span>
                        </td>
                        <td>@item.SubmitDate.ToString("yyyy/MM/dd")</td>
                        <td>
                            @if (!string.IsNullOrEmpty(item.Comment))
                            {
                                <span class="text-muted">@item.Comment</span>
                            }
                            else
                            {
                                <span class="text-muted">-</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="bi bi-file-earmark-x display-1 text-muted"></i>
        <h3 class="text-muted mt-3">尚無提案</h3>
        <p class="text-muted">點擊上方按鈕新增第一個提案</p>
        <a asp-page="Create" asp-route-projectId="@Model.CurrentProject.Id" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>新增提案
        </a>
    </div>
}