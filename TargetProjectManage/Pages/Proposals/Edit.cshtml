@page "{id:int}"
@model TargetProjectManage.Pages.Proposals.EditModel
@{
    ViewData["Title"] = "編輯提案";
}

@if (Model.CurrentProject != null)
{
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1><i class="bi bi-pencil me-2"></i>編輯提案</h1>
            <div class="text-muted">
                <i class="bi bi-folder me-1"></i>@Model.CurrentProject.ProjectName 
                <span class="badge bg-primary ms-2">@Model.CurrentProject.ProjectCode</span>
            </div>
        </div>
        <a asp-page="Index" asp-route-projectId="@Model.CurrentProject.Id" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>返回提案列表
        </a>
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="bi bi-exclamation-triangle display-1 text-warning"></i>
        <h3 class="text-muted mt-3">請先選擇專案</h3>
        <p class="text-muted">請從專案列表中選擇一個專案來編輯提案</p>
        <a asp-page="/Projects/Index" class="btn btn-primary">
            <i class="bi bi-folder me-1"></i>選擇專案
        </a>
    </div>
    return;
}

<div class="row">
    <div class="col-md-8">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Proposal.Id" />
            <input type="hidden" asp-for="Proposal.ProjectId" />
            
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Proposal.VendorName" class="form-label">廠商名稱 *</label>
                        <input asp-for="Proposal.VendorName" class="form-control" />
                        <span asp-validation-for="Proposal.VendorName" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Proposal.SubmitDate" class="form-label">提案日期 *</label>
                        <input asp-for="Proposal.SubmitDate" type="date" class="form-control" />
                        <span asp-validation-for="Proposal.SubmitDate" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Proposal.Budget" class="form-label">預算 *</label>
                        <div class="input-group">
                            <span class="input-group-text">NT$</span>
                            <input asp-for="Proposal.Budget" type="number" step="0.01" class="form-control" />
                        </div>
                        <span asp-validation-for="Proposal.Budget" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label asp-for="Proposal.DurationMonths" class="form-label">執行期間 *</label>
                        <div class="input-group">
                            <input asp-for="Proposal.DurationMonths" type="number" class="form-control" />
                            <span class="input-group-text">個月</span>
                        </div>
                        <span asp-validation-for="Proposal.DurationMonths" class="text-danger"></span>
                    </div>
                </div>
            </div>
            
            <div class="mb-3">
                <label asp-for="Proposal.Comment" class="form-label">備註</label>
                <textarea asp-for="Proposal.Comment" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Proposal.Comment" class="text-danger"></span>
            </div>
            
            <div class="d-flex justify-content-end gap-2">
                <a asp-page="Index" asp-route-projectId="@Model.CurrentProject.Id" class="btn btn-secondary">取消</a>
                <button type="submit" class="btn btn-primary">
                    <i class="bi bi-check-circle me-1"></i>儲存變更
                </button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}