@page
@model TargetProjectManage.Pages.Issues.IndexModel
@{
    ViewData["Title"] = "議題清單";
}

@if (Model.CurrentProject != null)
{
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1><i class="bi bi-list-task me-2"></i>議題清單</h1>
            <div class="text-muted">
                <i class="bi bi-folder me-1"></i>@Model.CurrentProject.ProjectName
                <span class="badge bg-primary ms-2">@Model.CurrentProject.ProjectCode</span>
            </div>
        </div>
        <div class="d-flex align-items-center">
            <form method="get" class="me-3 d-flex align-items-center">
                <input type="hidden" name="projectId" value="@Model.CurrentProject.Id" />
                <label for="statusFilter" class="me-2 mb-0 text-muted small">狀態篩選</label>
                <select id="statusFilter" name="statusFilter" class="form-select form-select-sm" onchange="this.form.submit()">
                    <option value="全部" selected="@(string.IsNullOrEmpty(Model.StatusFilter) || Model.StatusFilter == "全部")">全部</option>
                    <option value="未開始" selected="@(Model.StatusFilter == "未開始")">未開始</option>
                    <option value="進行中" selected="@(Model.StatusFilter == "進行中")">進行中</option>
                    <option value="等待" selected="@(Model.StatusFilter == "等待")">等待</option>
                    <option value="結束" selected="@(Model.StatusFilter == "結束")">結束</option>
                </select>
            </form>
            <a asp-page="Create" asp-route-projectId="@Model.CurrentProject.Id" class="btn btn-primary me-2">
                <i class="bi bi-plus-circle me-1"></i>新增議題
            </a>
            <a asp-page="/Projects/Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left me-1"></i>返回專案列表
            </a>
        </div>
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="bi bi-exclamation-triangle display-1 text-warning"></i>
        <h3 class="text-muted mt-3">請先選擇專案</h3>
        <p class="text-muted">請從專案列表中選擇一個專案來管理議題</p>
        <a asp-page="/Projects/Index" class="btn btn-primary">
            <i class="bi bi-folder me-1"></i>選擇專案
        </a>
    </div>
    return;
}

@if (Model.Issues.Any())
{
    <div class="table-responsive">
        <table class="table table-hover align-middle">
            <thead class="table-dark">
                <tr>
                    <th>議題</th>
                    <th>Owner</th>
                    <th>討論內容</th>
                    <th>狀態</th>
                    <th>建立時間</th>
                    <th>操作</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Issues)
                {
                    <tr data-created-at="@item.CreatedAt.ToString("yyyy/MM/dd HH:mm")">
                        <td>@item.Title</td>
                        <td>@item.Owner</td>
                        <td>
                            <button type="button" class="btn btn-outline-info btn-sm btn-issue-content" title="議題內容">
                                <i class="bi bi-chat-left-text"></i> 討論內容
                            </button>
                        </td>
                        <td>
                            @{
                                var badgeClass = item.Status switch
                                {
                                    "進行中" => "bg-primary",
                                    "等待" => "bg-warning text-dark",
                                    "結束" => "bg-success",
                                    _ => "bg-secondary"
                                };
                            }
                            <span class="badge @badgeClass">@item.Status</span>
                        </td>
                        <td>@item.CreatedAt.ToString("yyyy/MM/dd HH:mm")</td>
                        <td>
                            <div class="btn-group" role="group">
                                <a asp-page="/IssueAttachments/Index" asp-route-issueId="@item.Id" class="btn btn-outline-secondary btn-sm" title="附件">
                                    <i class="bi bi-paperclip"></i>
                                </a>
                                <a asp-page="Edit" asp-route-id="@item.Id" class="btn btn-outline-primary btn-sm">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                <a asp-page="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash"></i>
                                </a>
                            </div>
                            <div class="d-none issue-detail">
                                <span class="issue-title">@item.Title</span>
                                <span class="issue-owner">@item.Owner</span>
                                <span class="issue-discussion-source">@(item.Discussion ?? "")</span>
                                <span class="issue-status">@item.Status</span>
                                <span class="issue-status-class">@badgeClass</span>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="bi bi-chat-square-text display-1 text-muted"></i>
        <h3 class="text-muted mt-3">尚無議題</h3>
        <p class="text-muted">點選右上角「新增議題」來建立第一個議題</p>
    </div>
}

@* 議題內容彈窗 *@
<div class="modal fade" id="issueContentModal" tabindex="-1" aria-labelledby="issueContentModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="issueContentModalLabel">
                    <i class="bi bi-chat-left-text me-2"></i>議題內容
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="關閉"></button>
            </div>
            <div class="modal-body">
                <dl class="row mb-0">
                    <dt class="col-sm-3 text-muted">議題</dt>
                    <dd class="col-sm-9" id="modalIssueTitle">—</dd>

                    <dt class="col-sm-3 text-muted">Owner</dt>
                    <dd class="col-sm-9" id="modalIssueOwner">—</dd>

                    <dt class="col-sm-3 text-muted">狀態</dt>
                    <dd class="col-sm-9">
                        <span id="modalIssueStatus" class="badge bg-secondary">—</span>
                    </dd>

                    <dt class="col-sm-3 text-muted">建立時間</dt>
                    <dd class="col-sm-9" id="modalIssueCreatedAt">—</dd>

                    <dt class="col-sm-3 text-muted">討論內容</dt>
                    <dd class="col-sm-9" id="modalIssueDiscussion" style="white-space: pre-wrap;">—</dd>
                </dl>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">關閉</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.querySelectorAll('.btn-issue-content').forEach(function (btn) {
            btn.addEventListener('click', function () {
                var row = this.closest('tr');
                var detail = row.querySelector('.issue-detail');
                function getText(className) {
                    if (!detail) return '—';
                    var n = detail.querySelector(className);
                    return (n && n.textContent.trim()) ? n.textContent.trim() : '—';
                }

                document.getElementById('modalIssueTitle').textContent = getText('.issue-title');
                document.getElementById('modalIssueOwner').textContent = getText('.issue-owner');
                document.getElementById('modalIssueCreatedAt').textContent = row.getAttribute('data-created-at') || '—';
                document.getElementById('modalIssueDiscussion').textContent = getText('.issue-discussion-source');

                var statusText = getText('.issue-status');
                var statusClass = getText('.issue-status-class');
                var statusBadge = document.getElementById('modalIssueStatus');
                statusBadge.textContent = statusText;
                statusBadge.className = statusClass === '—' ? 'badge bg-secondary' : ('badge ' + statusClass);

                new bootstrap.Modal(document.getElementById('issueContentModal')).show();
            });
        });
    </script>
}

