@page
@model TargetProjectManage.Pages.Projects.IndexModel
@{
    ViewData["Title"] = "專案管理";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1><i class="bi bi-folder2-open me-2"></i>專案管理</h1>
        <p class="text-muted mb-0">
            <i class="bi bi-lightbulb me-1"></i>
            請在頂部選擇專案，然後使用側邊欄功能進行管理
        </p>
    </div>
    <a asp-page="Create" class="btn btn-primary">
        <i class="bi bi-plus-circle me-1"></i>新增專案
    </a>
</div>

@if (Model.Projects.Any())
{
    <div class="row">
        @foreach (var project in Model.Projects)
        {
            <div class="col-md-6 col-lg-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-primary text-white">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-folder me-2"></i>@project.ProjectName
                        </h5>
                        <small class="text-white-50">@project.ProjectCode</small>
                    </div>
                    <div class="card-body">
                        @if (!string.IsNullOrEmpty(project.Description))
                        {
                            <p class="card-text text-muted">@project.Description</p>
                        }
                        <div class="mb-2">
                            <span class="badge bg-@(project.Status == "進行中" ? "success" : project.Status == "已完成" ? "info" : "warning")">
                                @project.Status
                            </span>
                        </div>
                        @if (project.Owner != null)
                        {
                            <p class="card-text">
                                <small class="text-muted">
                                    <i class="bi bi-person me-1"></i>負責人: @project.Owner
                                </small>
                            </p>
                        }
                        @if (project.StartDate.HasValue)
                        {
                            <p class="card-text">
                                <small class="text-muted">
                                    <i class="bi bi-calendar me-1"></i>開始日期: @project.StartDate.Value.ToString("yyyy/MM/dd")
                                </small>
                            </p>
                        }
                    </div>
                    <div class="card-footer bg-transparent">
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="text-muted small">
                                <i class="bi bi-info-circle me-1"></i>
                                選擇此專案後可使用側邊欄功能（成本分析、效益分析等）
                            </div>
                            <div class="d-flex gap-1">
                                <a asp-page="Edit" asp-route-id="@project.Id" class="btn btn-outline-secondary btn-sm">
                                    <i class="bi bi-pencil me-1"></i>編輯
                                </a>
                                <a asp-page="Delete" asp-route-id="@project.Id" class="btn btn-outline-danger btn-sm">
                                    <i class="bi bi-trash me-1"></i>刪除
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <div class="text-center py-5">
        <i class="bi bi-folder-x display-1 text-muted"></i>
        <h3 class="text-muted mt-3">尚無專案</h3>
        <p class="text-muted">點擊上方按鈕建立您的第一個專案</p>
        <a asp-page="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle me-1"></i>新增專案
        </a>
    </div>
}