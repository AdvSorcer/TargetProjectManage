@page
@model TargetProjectManage.Pages.Projects.DeleteModel
@{
    ViewData["Title"] = "刪除專案";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="bi bi-exclamation-triangle me-2 text-danger"></i>刪除專案</h1>
    <a asp-page="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>返回列表
    </a>
</div>

<div class="alert alert-danger" role="alert">
    <h4 class="alert-heading">確認刪除</h4>
    <p>您確定要刪除此專案嗎？此操作無法復原。</p>
    <hr>
    <p class="mb-0">刪除專案將會同時刪除所有相關的時程和提案資料。</p>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header bg-danger text-white">
                <h5 class="card-title mb-0">
                    <i class="bi bi-folder me-2"></i>@Model.Project.ProjectName
                </h5>
                <small class="text-white-50">@Model.Project.ProjectCode</small>
            </div>
            <div class="card-body">
                @if (!string.IsNullOrEmpty(Model.Project.Description))
                {
                    <p class="card-text">@Model.Project.Description</p>
                }
                <div class="row">
                    <div class="col-md-6">
                        <p><strong>狀態:</strong> 
                            <span class="badge bg-@(Model.Project.Status == "進行中" ? "success" : Model.Project.Status == "已完成" ? "info" : "warning")">
                                @Model.Project.Status
                            </span>
                        </p>
                        @if (Model.Project.Owner != null)
                        {
                            <p><strong>負責人:</strong> @Model.Project.Owner</p>
                        }
                    </div>
                    <div class="col-md-6">
                        @if (Model.Project.StartDate.HasValue)
                        {
                            <p><strong>開始日期:</strong> @Model.Project.StartDate.Value.ToString("yyyy/MM/dd")</p>
                        }
                        @if (Model.Project.EndDate.HasValue)
                        {
                            <p><strong>結束日期:</strong> @Model.Project.EndDate.Value.ToString("yyyy/MM/dd")</p>
                        }
                    </div>
                </div>
                @if (!string.IsNullOrEmpty(Model.Project.Remark))
                {
                    <p><strong>備註:</strong> @Model.Project.Remark</p>
                }
            </div>
        </div>
        
        <form method="post" class="mt-4">
            <input type="hidden" asp-for="Project.Id" />
            <div class="d-flex justify-content-end gap-2">
                <a asp-page="Index" class="btn btn-secondary">取消</a>
                <button type="submit" class="btn btn-danger">
                    <i class="bi bi-trash me-1"></i>確認刪除
                </button>
            </div>
        </form>
    </div>
</div>
