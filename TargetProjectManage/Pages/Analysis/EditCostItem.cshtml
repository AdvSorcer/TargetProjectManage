@page
@model TargetProjectManage.Pages.Analysis.EditCostItemModel
@{
    ViewData["Title"] = "編輯成本項目";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1><i class="bi bi-pencil me-2"></i>編輯成本項目</h1>
        @if (Model.CostItem.Project != null)
        {
            <div class="text-muted">
                <i class="bi bi-folder me-1"></i>@Model.CostItem.Project.ProjectName 
                <span class="badge bg-primary ms-2">@Model.CostItem.Project.ProjectCode</span>
            </div>
        }
    </div>
    <a asp-page="CostAnalysis" asp-route-projectId="@Model.CostItem.ProjectId" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>返回成本分析
    </a>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h5><i class="bi bi-calculator me-2"></i>成本項目資訊</h5>
            </div>
            <div class="card-body">
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <input type="hidden" asp-for="CostItem.Id" />
                    <input type="hidden" asp-for="CostItem.ProjectId" />
                    <input type="hidden" asp-for="CostItem.CreatedDate" />
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="CostItem.ItemName" class="form-label">項目名稱 *</label>
                                <input asp-for="CostItem.ItemName" class="form-control" />
                                <span asp-validation-for="CostItem.ItemName" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="CostItem.Category" class="form-label">成本類別 *</label>
                                <select asp-for="CostItem.Category" class="form-select">
                                    <option value="">請選擇類別</option>
                                    <option value="人力">人力</option>
                                    <option value="設備">設備</option>
                                    <option value="材料">材料</option>
                                    <option value="管理費">管理費</option>
                                    <option value="其他">其他</option>
                                </select>
                                <span asp-validation-for="CostItem.Category" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="CostItem.EstimatedCost" class="form-label">預估成本 *</label>
                                <div class="input-group">
                                    <span class="input-group-text">NT$</span>
                                    <input asp-for="CostItem.EstimatedCost" class="form-control" type="number" step="0.01" />
                                </div>
                                <span asp-validation-for="CostItem.EstimatedCost" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="CostItem.ActualCost" class="form-label">實際成本</label>
                                <div class="input-group">
                                    <span class="input-group-text">NT$</span>
                                    <input asp-for="CostItem.ActualCost" class="form-control" type="number" step="0.01" />
                                </div>
                                <span asp-validation-for="CostItem.ActualCost" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label asp-for="CostItem.Description" class="form-label">說明</label>
                        <textarea asp-for="CostItem.Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="CostItem.Description" class="text-danger"></span>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="CostItem.ContractNumber" class="form-label">合約編號</label>
                                <input asp-for="CostItem.ContractNumber" class="form-control" />
                                <span asp-validation-for="CostItem.ContractNumber" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="CostItem.PaymentTerms" class="form-label">付款條件</label>
                                <input asp-for="CostItem.PaymentTerms" class="form-control" />
                                <span asp-validation-for="CostItem.PaymentTerms" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="CostItem.PaymentDate" class="form-label">付款日期</label>
                                <input asp-for="CostItem.PaymentDate" class="form-control" type="date" />
                                <span asp-validation-for="CostItem.PaymentDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="CostItem.TaxStatus" class="form-label">稅務狀態</label>
                                <select asp-for="CostItem.TaxStatus" class="form-select">
                                    <option value="">請選擇狀態</option>
                                    <option value="含稅">含稅</option>
                                    <option value="未稅">未稅</option>
                                    <option value="免稅">免稅</option>
                                </select>
                                <span asp-validation-for="CostItem.TaxStatus" class="text-danger"></span>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a asp-page="CostAnalysis" asp-route-projectId="@Model.CostItem.ProjectId" class="btn btn-secondary">
                            <i class="bi bi-x-circle me-1"></i>取消
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-circle me-1"></i>儲存變更
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    
    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5><i class="bi bi-info-circle me-2"></i>編輯說明</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-info">
                    <i class="bi bi-lightbulb me-2"></i>
                    <strong>編輯提醒：</strong>
                    <ul class="mb-0 mt-2">
                        <li>修改預估成本會影響整體成本分析</li>
                        <li>實際成本應根據實際支出情況更新</li>
                        <li>付款資訊有助於現金流管理</li>
                    </ul>
                </div>
                
                <hr>
                
                <h6>成本差異分析：</h6>
                @{
                    var difference = Model.CostItem.ActualCost - Model.CostItem.EstimatedCost;
                    var diffPercentage = Model.CostItem.EstimatedCost > 0 ? (difference / Model.CostItem.EstimatedCost * 100) : 0;
                }
                <div class="mb-2">
                    <span class="badge bg-@(difference > 0 ? "danger" : difference < 0 ? "success" : "secondary")">
                        差異: NT$ @difference.ToString("N0") (@diffPercentage.ToString("F1")%)
                    </span>
                </div>
                
                @if (difference > 0)
                {
                    <div class="alert alert-warning">
                        <i class="bi bi-exclamation-triangle me-2"></i>
                        實際成本超出預估，請檢視原因並調整後續預算。
                    </div>
                }
                else if (difference < 0)
                {
                    <div class="alert alert-success">
                        <i class="bi bi-check-circle me-2"></i>
                        實際成本低於預估，成本控制良好。
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}