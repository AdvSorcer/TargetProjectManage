@page "{id:int}"
@model TargetProjectManage.Pages.Schedules.DeleteModel
@{
    ViewData["Title"] = "刪除時程";
}
<h1>刪除時程</h1>
<div>
    <h4>確定要刪除以下時程嗎？</h4>
    <dl class="row">
        <dt class="col-sm-2">階段名稱</dt>
        <dd class="col-sm-10">@Model.Schedule.StageName</dd>
        <dt class="col-sm-2">結束日期</dt>
        <dd class="col-sm-10">@Model.Schedule.EndDate.ToShortDateString()</dd>
        <dt class="col-sm-2">負責人</dt>
        <dd class="col-sm-10">@Model.Schedule.Owner</dd>
        <dt class="col-sm-2">備註</dt>
        <dd class="col-sm-10">@Model.Schedule.Remark</dd>
    </dl>
    <form method="post">
        <button type="submit" class="btn btn-danger">刪除</button>
        <a asp-page="Index" class="btn btn-secondary">取消</a>
    </form>
</div>
